import 'package:flutter/material.dart';

class LampPage extends StatefulWidget {
  const LampPage({super.key});

  @override
  State<LampPage> createState() => _LampPageState();
}

class _LampPageState extends State<LampPage> {
  double lampValue = 0.0;

  // Foydalanuvchi tanlashi mumkin bo'lgan rang shablonlari
  List<Color> selectedPalette = [const Color(0xfff0cb83), Colors.white];

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      extendBodyBehindAppBar: true,
      appBar: AppBar(
        backgroundColor: Colors.transparent,
        elevation: 0,
        leading: IconButton(
          icon: const Icon(Icons.arrow_back_ios, color: Colors.white),
          onPressed: () => Navigator.pop(context),
        ),
      ),
      body: AnimatedContainer(
        duration: const Duration(milliseconds: 400),
        decoration: BoxDecoration(
          gradient: LinearGradient(
            begin: Alignment.topCenter,
            end: Alignment.bottomCenter,
            colors: [
              // Fon yorug'ligini lampValue ga qarab kuchaytiramiz
              selectedPalette[0].withOpacity(0.3 * lampValue),
              Colors.black,
            ],
          ),
        ),
        child: Column(
          children: [
            const Spacer(flex: 2),
            
            // Lampa va Nur
            Stack(
              alignment: Alignment.center,
              children: [
                // ASOSIY YORUG'LIK (Glow)
                AnimatedContainer(
                  duration: const Duration(milliseconds: 300),
                  width: 200 * lampValue,
                  height: 200 * lampValue,
                  decoration: BoxDecoration(
                    shape: BoxShape.circle,
                    boxShadow: [
                      BoxShadow(
                        color: selectedPalette[0].withOpacity(lampValue),
                        blurRadius: 100 * lampValue,
                        spreadRadius: 20 * lampValue,
                      ),
                    ],
                  ),
                ),
                // Lampa korpusi
                Container(
                  width: 100,
                  height: 180,
                  decoration: BoxDecoration(
                    border: Border.all(color: Colors.white24),
                    borderRadius: BorderRadius.circular(10),
                    gradient: LinearGradient(
                      colors: [Colors.white10, Colors.white.withOpacity(0.05)],
                    ),
                  ),
                ),
              ],
            ),

            const Spacer(),

            // Slider - Ekranning pastrog'idan tepaga surilgan
            Padding(
              padding: const EdgeInsets.symmetric(horizontal: 40, vertical: 60),
              child: Column(
                children: [
                  const Text("Yorqinlik", style: TextStyle(color: Colors.white60)),
                  Slider(
                    activeColor: selectedPalette[0],
                    inactiveColor: Colors.white24,
                    value: lampValue,
                    onChanged: (v) => setState(() => lampValue = v),
                  ),
                ],
              ),
            ),
          ],
        ),
      ),
    );
  }
}
